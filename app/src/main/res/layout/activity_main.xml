<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity"
    android:padding="16dp">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <TextView
            android:id="@+id/text1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Sistema de Evaluacion" />

        <Spinner
            android:id="@+id/spinner"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/text1"
            android:entries="@array/eval"   />
        <TextView
            android:id="@+id/textline1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:layout_below="@+id/spinner"
            android:text="____________________________________________________"/>

        <TextView
            android:id="@+id/text2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/textline1"
            android:layout_marginBottom="15dp"
            android:layout_marginTop="15dp"
            android:text="Prácticas Téoricas"/>

        <TextView
            android:id="@+id/text3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/textline1"
            android:layout_alignParentEnd="true"
            android:layout_marginTop="15dp"
            android:layout_marginBottom="15dp"
            android:text="Prom: 0.0" />
        <TextView
            android:id="@+id/text4"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/text2"
            android:layout_marginBottom="15dp"
            android:layout_marginTop="15dp"
            android:text="Práctica 1"/>

        <EditText
            android:id="@+id/edit1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/text3"
            android:layout_alignParentEnd="true"
            android:hint="16"
            android:textSize="14dp" />
        <TextView
            android:id="@+id/text5"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/text4"
            android:layout_marginBottom="15dp"
            android:layout_marginTop="15dp"
            android:text="Práctica 2"/>
        <EditText
            android:id="@+id/edit2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/edit1"
            android:layout_alignParentEnd="true"
            android:textSize="14dp"
            android:hint="15"/>
        <TextView
            android:id="@+id/textline2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:layout_below="@+id/text5"
            android:text="____________________________________________________"/>

        <TextView
            android:id="@+id/text6"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/textline2"
            android:layout_marginBottom="15dp"
            android:layout_marginTop="15dp"
            android:text="Prácticas Laboratorios"/>

        <TextView
            android:id="@+id/text7"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/textline2"
            android:layout_alignParentEnd="true"
            android:layout_marginTop="15dp"
            android:layout_marginBottom="15dp"
            android:text="Prom: 0.0"/>

        <TextView
            android:id="@+id/text8"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/text7"
            android:layout_marginBottom="15dp"
            android:layout_marginTop="15dp"
            android:text="Práctica 1"/>
        <EditText
            android:id="@+id/edit3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/text7"
            android:layout_alignParentEnd="true"
            android:layout_marginBottom="10dp"
            android:textSize="14dp"
            android:hint="16"/>
        <TextView
            android:id="@+id/text9"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/text8"
            android:layout_marginBottom="15dp"
            android:layout_marginTop="15dp"
            android:text="Práctica 2"/>
        <EditText
            android:id="@+id/edit4"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/edit3"
            android:layout_alignParentEnd="true"
            android:layout_marginBottom="10dp"
            android:textSize="14dp"
            android:hint="14"/>
        <TextView
            android:id="@+id/text10"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/text9"
            android:layout_marginBottom="15dp"
            android:layout_marginTop="15dp"
            android:text="Práctica 3"/>
        <EditText
            android:id="@+id/edit5"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/edit4"
            android:layout_alignParentEnd="true"
            android:layout_marginBottom="10dp"
            android:textSize="14dp"
            android:hint="13"/>
        <TextView
            android:id="@+id/text11"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/text10"
            android:layout_marginBottom="15dp"
            android:layout_marginTop="15dp"
            android:text="Práctica 4"/>
        <EditText
            android:id="@+id/edit6"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/edit5"
            android:layout_alignParentEnd="true"
            android:layout_marginBottom="10dp"
            android:textSize="14dp"
            android:hint="12"/>

        <TextView
            android:id="@+id/text12"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text=""
            android:gravity="center"
            android:layout_below="@+id/text11"
            android:textSize="24dp"/>
        <TextView
            android:id="@+id/text13"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text=""
            android:gravity="center"
            android:textSize="24dp"
            android:layout_below="@+id/text12"/>
        <Button
            android:id="@+id/calcular"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Calcular"
            android:layout_below="@+id/text13"
            android:gravity="center"/>

    </RelativeLayout>
</ScrollView>